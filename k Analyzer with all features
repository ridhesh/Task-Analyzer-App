[32m+[m[32m    performLocalAnalysis() {[m
[32m+[m[32m        const today = new Date();[m
[32m+[m[41m        [m
[32m+[m[32m        // Calculate scores for all tasks using smart algorithm[m
[32m+[m[32m        const scoredTasks = this.tasks.map(task => {[m
[32m+[m[32m            const dueDate = new Date(task.due_date);[m
[32m+[m[32m            const daysUntilDue = Math.ceil((dueDate - today) / (1000 * 60 * 60 * 24));[m
[32m+[m[41m            [m
[32m+[m[32m            // Calculate component scores[m
[32m+[m[32m            let urgency, importance, effort, dependency;[m
[32m+[m[41m            [m
[32m+[m[32m            // Urgency score (based on days until due)[m
[32m+[m[32m            if (daysUntilDue < 0) urgency = 1.0; // Overdue[m
[32m+[m[32m            else if (daysUntilDue === 0) urgency = 0.9; // Due today[m
[32m+[m[32m            else if (daysUntilDue <= 1) urgency = 0.8; // Tomorrow[m
[32m+[m[32m            else if (daysUntilDue <= 3) urgency = 0.6; // 2-3 days[m
[32m+[m[32m            else if (daysUntilDue <= 7) urgency = 0.4; // 4-7 days[m
[32m+[m[32m            else urgency = 0.2; // More than 7 days[m
[32m+[m[41m            [m
[32m+[m[32m            // Importance score (normalize 1-10 to 0-1)[m
[32m+[m[32m            importance = task.importance / 10;[m
[32m+[m[41m            [m
[32m+[m[32m            // Effort score (inverse relationship - lower effort = higher score)[m
[32m+[m[32m            if (task.estimated_hours <= 1) effort = 1.0;[m
[32m+[m[32m            else if (task.estimated_hours <= 4) effort = 0.7;[m
[32m+[m[32m            else if (task.estimated_hours <= 8) effort = 0.4;[m
[32m+[m[32m            else effort = 0.2;[m
[32m+[m[41m            [m
[32m+[m[32m            // Dependency score (tasks that block others get higher priority)[m
[32m+[m[32m            dependency = task.dependencies && task.dependencies.length > 0 ? 0.8 : 0.3;[m
[32m+[m[41m            [m
[32m+[m[32m            // Get weights based on strategy[m
[32m+[m[32m            const weights = this.getWeights();[m
[32m+[m[41m            [m
[32m+[m[32m            // Calculate overall priority score[m
[32m+[m[32m            const priority_score =[m[41m [m
[32m+[m[32m                (urgency * weights.urgency) +[m
[32m+[m[32m                (importance * weights.importance) +[m
[32m+[m[32m                (effort * weights.effort) +[m
[32m+[m[32m                (dependency * weights.dependencies);[m
[32m+[m[41m            [m
[32m+[m[32m            const explanation = this.generateExplanation(urgency, importance, effort, dependency);[m
[32m+[m[41m            [m
[32m+[m[32m            return {[m
[32m+[m[32m                ...task,[m
[32m+[m[32m                priority_score: Math.min(1, Math.max(0, priority_score)),[m
[32m+[m[32m                explanation,[m
[32m+[m[32m                component_scores: {[m
[32m+[m[32m                    urgency: Math.round(urgency * 100) / 100,[m
[32m+[m[32m                    importance: Math.round(importance * 100) / 100,[m
[32m+[m[32m                    effort: Math.round(effort * 100) / 100,[m
[32m+[m[32m                    dependency: Math.round(dependency * 100) / 100[m
[32m+[m[32m                }[m
[32m+[m[32m            };[m
[32m+[m[32m        });[m
[32m+[m[41m        [m
[32m+[m[32m        // Sort by priority score (highest first)[m
[32m+[m[32m        this.tasks = scoredTasks.sort((a, b) => b.priority_score - a.priority_score);[m
[32m+[m[32m        this.saveToLocalStorage();[m
[32m+[m[32m    }[m
